<h1 class="text-3xl font-bold mb-6">Featured Products</h1>
<div class="product-grid">
  {% for product in collections.all.products limit:6 %}
    <div class="product-card text-center">
      <a href="{{ product.url }}">
        <img class="w-full rounded-lg mb-2" src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt }}">
      </a>
      <h2 class="text-lg font-semibold mb-1"><a href="{{ product.url }}">{{ product.title }}</a></h2>
      <div class="mb-2 text-gray-700">{{ product.price | money }}</div>
      <a class="btn" href="{{ product.url }}">View</a>
    </div>
  {% else %}
    <p>No products found</p>
  {% endfor %}
</div>
